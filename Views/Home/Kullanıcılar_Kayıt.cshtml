@model bitirme_database_new.Models.Kullanıcılar

@{
    ViewBag.Title = "Kullanıcılar Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .navbar {
        background-color: #FFC300;
    }

    .register-container {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
        padding: 20px 30px;
        max-width: 600px;
        margin: 40px auto; /* Ortalanmış görünüm */
    }

    h2 {
        color: #333333;
        margin-bottom: 15px;
        font-weight: 600;
        font-size: 20px;
        text-align: center;
    }

    .form-group label {
        font-weight: bold;
        font-size: 14px;
    }

    .form-group input {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 8px;
        font-size: 14px;
        width: 100%;
    }

    button {
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        padding: 10px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }

    .form-row {
        display: flex;
        gap: 15px;
    }

        .form-row .form-group {
            flex: 1;
        }

</style>


<div class="register-container">
    <h2>Kullanıcı Kayıt</h2>

    @* Başarı mesajını kontrol edip gösteriyoruz *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @using (Html.BeginForm("Kullanıcılar_Kayıt", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-row">
            <div class="form-group">
                <label for="kullanici_adi">Kullanıcı Adı</label>
                @Html.TextBoxFor(model => model.kullanici_adi, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="sifre">Şifre</label>
                @Html.PasswordFor(model => model.sifre, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="e_posta">E-posta</label>
                @Html.TextBoxFor(model => model.e_posta, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="ad">Ad</label>
                @Html.TextBoxFor(model => model.ad, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="soyad">Soyad</label>
                @Html.TextBoxFor(model => model.soyad, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="telefon">Telefon</label>
                @Html.TextBoxFor(model => model.telefon, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="adres">Adres</label>
                @Html.TextBoxFor(model => model.adres, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-block " style="background-color: #FFC300">Kaydet</button>
    }
</div>

