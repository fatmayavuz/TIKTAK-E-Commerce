@model IEnumerable<bitirme_database_new.Models.Ilanlar>

@{
    ViewBag.Title = "Kullanıcı İlanları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Kullanıcıya Ait İlanlar</h2>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ilan in Model)
                {
                    <tr>
                        <td>@ilan.baslik</td>
                        <td>@ilan.fiyat</td>
                        <td>@ilan.ana_kategori</td>
                        <td>@ilan.aciklama</td>
                        <td>
                            <a href="@Url.Action("IlanDuzenle1", "Home", new { id = ilan.id })" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("IlanSil2", "Home", new { id = ilan.id })" class="btn btn-danger btn-sm" onclick="return confirm('Bu ilanı silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Henüz hiçbir ilanınız bulunmamaktadır.</p>
    }
</div>
