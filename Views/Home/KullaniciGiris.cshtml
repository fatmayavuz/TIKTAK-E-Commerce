@model bitirme_database_new.Models.Kullanıcılar

@{
    ViewBag.Title = "KullaniciGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .navbar {
        background-color: #FFC300;
    }

    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn {
        width: 100%;
        background-color: #ffcc00; /* Button arka plan rengi */
        border-color: #ffcc00; /* Border rengi */
        color: #000; /* Yazı rengini siyah yapma */
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #e6b800; /* Hover durumunda buton rengi koyulaşır */
            border-color: #e6b800; /* Hover durumunda border rengi koyulaşır */
        }

    .alert {
        margin-top: 20px;
    }
</style>

<div class="login-container">
    <h2>Kullanıcı Giriş</h2>
    @using (Html.BeginForm("KullaniciGiris", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="e_posta">E-posta</label>
            <input type="email" name="e_posta" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="sifre">Şifre</label>
            <input type="password" name="sifre" class="form-control" required />
        </div>
        <br />
        <button type="submit" class="btn btn-block">Giriş Yap</button>
    }

    @if (ViewBag.Hata != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
    }
</div>
