@model IEnumerable<bitirme_database_new.Models.Ilanlar>

@{
    ViewBag.Title = "İlan Listesi";
}

<div class="container mt-4">
    <h1 class="text-center mb-5">Tüm İlanlar</h1>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Fiyat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ilan in Model)
                {
                    <tr>
                        <td>@ilan.id</td>
                        <td>@ilan.baslik</td>
                        <td>@ilan.aciklama</td>
                        <td>@ilan.fiyat</td>
                        <td>
                            <a href="@Url.Action("IlanDuzenle", "Home", new { id = ilan.id })" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("IlanSil1", "Home", new { id = ilan.id })" class="btn btn-danger btn-sm" onclick="return confirm('Bu ilanı silmek istediğinize emin misiniz?');">Sil</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">Hiç ilan bulunamadı.</p>
    }
</div>
